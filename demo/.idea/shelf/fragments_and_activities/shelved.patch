+        Activity activity = getActivity();
+        activity.findViewById(R.id.item1).setOnClickListener(this::itemClicked);
+        activity.findViewById(R.id.item2).setOnClickListener(this::itemClicked);
+        activity.findViewById(R.id.item3).setOnClickListener(this::itemClicked);
+    }
+
+    @Override
+    public void onAttach(Context context) {
+        super.onAttach(context);
+        listener = (ItemListener) context;
+    }
+
+    @Override
+    public void onDetach() {
+        super.onDetach();
+        listener = null;
+    }
+
+    private void itemClicked(View view) {
