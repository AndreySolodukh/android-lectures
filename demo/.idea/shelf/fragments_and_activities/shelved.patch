+package ru.spbstu.icc.kspt.andrei.mydemoapplication;
+
+import android.app.Activity;
+import android.app.Fragment;
+import android.app.FragmentManager;
+import android.app.FragmentTransaction;
+import android.os.Bundle;
+import android.support.annotation.Nullable;
+
+public class ListActivity extends Activity implements ListFragment.ItemListener {
+    public static final String DETAILS_TAG = "details_tag";
+    private static final String LIST_TAG = "list_tag";
+    private boolean twoPanes = false;
+
+    @Override
+    protected void onCreate(@Nullable Bundle savedInstanceState) {
+        super.onCreate(savedInstanceState);
+        setContentView(R.layout.activity_list);
+
+        if (findViewById(R.id.details_fragment) != null) {
+            twoPanes = true;
+        }
+
+        FragmentManager fm = getFragmentManager();
+        while (fm.getBackStackEntryCount() > 0){
+            fm.popBackStack();
+        }
+
+        FragmentTransaction tx = fm.beginTransaction();
+
+        Fragment listFragment = fm.findFragmentByTag(LIST_TAG);
+        if (listFragment == null) {
+            listFragment = new ListFragment();
+            tx.add(R.id.list_fragment, listFragment, LIST_TAG);
+        }
+
+        if (twoPanes) {
+            tx.replace(R.id.details_fragment, new DetailsFragment(), DETAILS_TAG);
+        }
+
+        tx.commit();
+    }
+
+    @Override
+    public void onItemSelected(String text) {
+        if (twoPanes) {
+            DetailsFragment details = (DetailsFragment) getFragmentManager().findFragmentById(R.id.details_fragment);
+            details.setText(text);
+        } else {
+            FragmentManager fm = getFragmentManager();
+
+            DetailsFragment detailsFragment = (DetailsFragment) fm.findFragmentByTag(DETAILS_TAG);
+            if (detailsFragment != null && detailsFragment.isInLayout()){
+                detailsFragment.setText(text);
+            } else {
+                FragmentTransaction tx = fm.beginTransaction();
+                detailsFragment = DetailsFragment.getDetailsFragment(text);
+                tx.replace(R.id.list_fragment, detailsFragment, DETAILS_TAG);
+                tx.addToBackStack(null);
+                tx.commit();
+            }
+        }
+    }
+
+}
